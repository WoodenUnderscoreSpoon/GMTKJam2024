script/source = "extends CanvasLayer

const MAX_UPGRADE_LEVELS := [3, 3, 3] #[reel, rod, bait]
const PRICES := [[1, 2, 3], [1, 2, 3], [1, 2, 3], [1, 2, 3]] #[reel, rod, bait, license], interior arrays are the prices of each upgrade/license at each level [lvl1, lvl2, lvl3]

func _ready() -> void: 
	$\"Control/Margin/GridContainer/Better Reel\".grab_focus()
	Load_Button_States()

func _process(_delta : float) -> void:
	#SCALE
	var _scale = s_Interface.Get_Scale()
	var _anchor = s_Interface.Get_Anchor()
	scale.x = _scale
	scale.y = _scale
	for _child in get_children():
		_child.anchor_right = _anchor
		_child.anchor_bottom = _anchor

func _input(_event : InputEvent) -> void:
	if (_event.is_action_pressed(\"PAUSE\")): Return()
	elif (_event.is_action_pressed(\"INTERACT\")): Return()

func Return() -> void:
	s_Interface.Return()
	s_Pause.Pause_Tree(s_Scene.Get_Current(), false)
	#s_Global._Paused = false

func Upgrade_Reel() -> void:
	s_Scene.Get_Current()._Upgrades[0] = s_Scene.Get_Current()._Upgrades[0] + 1
	if s_Scene.Get_Current()._Upgrades[0] == MAX_UPGRADE_LEVELS[0]: $\"Control/Margin/GridContainer/Better Reel\".disabled = true
func Upgrade_Rod() -> void:
	s_Scene.Get_Current()._Upgrades[1] = s_Scene.Get_Current()._Upgrades[1] + 1
	if s_Scene.Get_Current()._Upgrades[1] == MAX_UPGRADE_LEVELS[1]: $\"Control/Margin/GridContainer/Better Rod\".disabled = true
func Upgrade_Bait() -> void:
	s_Scene.Get_Current()._Upgrades[2] = s_Scene.Get_Current()._Upgrades[2] + 1
	if s_Scene.Get_Current()._Upgrades[2] == MAX_UPGRADE_LEVELS[2]: $\"Control/Margin/GridContainer/Better Bait\".disabled = true
func Unlock_License_1() -> void:
	s_Scene.Get_Current().Unlock_License(1)
	$\"Control/Margin/GridContainer/License 1\".disabled = true
func Unlock_License_2() -> void:
	s_Scene.Get_Current().Unlock_License(2)
	$\"Control/Margin/GridContainer/License 2\".disabled = true
func Unlock_License_3() -> void:
	s_Scene.Get_Current().Unlock_License(3)
	$\"Control/Margin/GridContainer/License 3\".disabled = true



func Load_Button_States() -> void:
	if s_Scene.Get_Current()._Upgrades[0] == MAX_UPGRADE_LEVELS[0]: $\"Control/Margin/GridContainer/Better Reel\".disabled = true
	if s_Scene.Get_Current()._Upgrades[1] == MAX_UPGRADE_LEVELS[1]: $\"Control/Margin/GridContainer/Better Rod\".disabled = true
	if s_Scene.Get_Current()._Upgrades[2] == MAX_UPGRADE_LEVELS[2]: $\"Control/Margin/GridContainer/Better Bait\".disabled = true
	if s_Scene.Get_Current()._Licenses[0] > 0: $\"Control/Margin/GridContainer/License 1\".disabled = true
	if s_Scene.Get_Current()._Licenses[1] > 0: $\"Control/Margin/GridContainer/License 2\".disabled = true
	if s_Scene.Get_Current()._Licenses[2] > 0: $\"Control/Margin/GridContainer/License 3\".disabled = true
	#TODO update buttons with the next level's price
"

