[sub_resource type="GDScript" id="GDScript_ub5eq"]
script/source = "extends CanvasLayer

var scene : Node
const PRICES := [[1, 2, 3, null], [1, 2, 3, null], [1, 2, 3, null], [1, 2, 3, 4]] #[reel, rod, bait, license], interior arrays are the prices to get each upgrade at each level [lvl1, lvl2, lvl3, sold out]

func _ready() -> void: 
	scene = s_Scene.Get_Current()
	$\"Margin/VBox/Margin/Return\".grab_focus()
	Load_Button_States()

func _process(_delta : float) -> void:
	#SCALE
	var _scale = s_Interface.Get_Scale()
	var _anchor = s_Interface.Get_Anchor()
	scale.x = _scale
	scale.y = _scale
	for _child in get_children():
		_child.anchor_right = _anchor
		_child.anchor_bottom = _anchor

func _input(_event : InputEvent) -> void:
	if (_event.is_action_pressed(\"PAUSE\")): Return()
	elif (_event.is_action_pressed(\"INTERACT\")): Return()

func Return() -> void:
	s_Interface.Return()
	s_Pause.Pause_Tree(s_Scene.Get_Current(), false)
	s_Interface.Get_Current().Update_Money()
	#s_Global._Paused = false

func Upgrade_Reel() -> void:
	if scene.Unlock_Upgrade(0, PRICES[0][scene._Upgrades[0]]): $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Reel\".disabled = true
	Load_Button_States()
func Upgrade_Rod() -> void:
	if scene.Unlock_Upgrade(1, PRICES[1][scene._Upgrades[1]]): $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Rod\".disabled = true
	Load_Button_States()
func Upgrade_Bait() -> void:
	if scene.Unlock_Upgrade(2, PRICES[2][scene._Upgrades[2]]): $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Bait\".disabled = true
	Load_Button_States()
func Unlock_License_Small() -> void:
	scene.Unlock_License(2, PRICES[3][0])
	$\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Small\".disabled = true
	Load_Button_States()
func Unlock_License_Medium() -> void:
	scene.Unlock_License(3, PRICES[3][1])
	$\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Medium\".disabled = true
	Load_Button_States()
func Unlock_License_Large() -> void:
	scene.Unlock_License(4, PRICES[3][2])
	$\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Large\".disabled = true
	Load_Button_States()
func Unlock_License_Huge() -> void:
	scene.Unlock_License(5, PRICES[3][3])
	$\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Huge\".disabled = true
	Load_Button_States()

func Load_Button_States() -> void:
	if scene.Is_Upgrade_Max_Level(0): $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Reel\".disabled = true
	if scene.Is_Upgrade_Max_Level(1): $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Rod\".disabled = true
	if scene.Is_Upgrade_Max_Level(2): $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Bait\".disabled = true
	if scene._Licenses[1] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Small\".disabled = true
	if scene._Licenses[2] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Medium\".disabled = true
	if scene._Licenses[3] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Large\".disabled = true
	if scene._Licenses[4] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Huge\".disabled = true
	
	if PRICES[0][scene.Get_Upgrade_Level(0)] == null: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Reel\".set_text(\"Better Reel: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Reel\".set_text(str(\"Better Reel: $\", PRICES[0][scene.Get_Upgrade_Level(0)]))
	if PRICES[1][scene.Get_Upgrade_Level(1)] == null: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Rod\".set_text(\"Better Rod: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Rod\".set_text(str(\"Better Rod: $\", PRICES[1][scene.Get_Upgrade_Level(1)]))
	if PRICES[2][scene.Get_Upgrade_Level(2)] == null: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Bait\".set_text(\"Better Bait: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Upgrades/Better Bait\".set_text(str(\"Better Bait: $\", PRICES[2][scene.Get_Upgrade_Level(2)]))
	
	if scene._Licenses[1] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Small\".set_text(\"Small License: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Small\".set_text(str(\"Small License: $\", PRICES[3][0]))
	if scene._Licenses[2] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Medium\".set_text(\"Medium License: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Medium\".set_text(str(\"Medium License: $\", PRICES[3][1]))
	if scene._Licenses[3] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Large\".set_text(\"Large License: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Large\".set_text(str(\"Large License: $\", PRICES[3][2]))
	if scene._Licenses[4] > 0: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Huge\".set_text(\"Huge License: SOLD OUT\")
	else: $\"Margin/VBox/Decoration/Margin/VBox/HBoxContainer/Licenses/License Huge\".set_text(str(\"Huge License: $\", PRICES[3][3]))
"

