script/source = "extends CanvasLayer

@onready var money_counter = $\"Control/Money Counter\"
var money = 0

func _process(_delta : float) -> void:
	#SCALE
	var _scale = s_Interface.Get_Scale()
	var _anchor = s_Interface.Get_Anchor()
	scale.x = _scale
	scale.y = _scale
	for _child in get_children():
		_child.anchor_right = _anchor
		_child.anchor_bottom = _anchor
		
		
func Add_Money(fish_size): # Calculating price can be done in fish code too if we prefer
	money += fish_size * 2 # 2 is also placeholder until sizes are determined
	money_counter.text = \"Money: \" + str(money)
	

