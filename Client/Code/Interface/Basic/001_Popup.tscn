script/source = "extends CanvasLayer

func Setup(_text : String) -> void:
	$\"Margin/Margin/Margin/VBox/HBox/Close\".grab_focus()
	$\"Margin/Margin/Margin/VBox/Name\".text = _text

func _process(_delta : float) -> void:
	#SCALE
	var _scale = CE_Interface.Get_Scale()
	var _anchor = CE_Interface.Get_Anchor()
	scale.x = _scale
	scale.y = _scale
	for _child in get_children():
		_child.anchor_right  = _anchor
		_child.anchor_bottom = _anchor

func _input(_event : InputEvent) -> void: if (_event.is_action_pressed(\"PAUSE\")): Return()
func Return() -> void: CE_Interface.Return()
"

