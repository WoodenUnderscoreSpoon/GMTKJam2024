script/source = "extends MarginContainer

func Setup(_monster : CE_Monster) -> void:
	#TEXT
	$\"Margin/VBox/Box/Margin/Grid/Name\".text = \"Name - \" + _monster.Get_Name()
	$\"Margin/VBox/Box/Margin/Grid/Sex\".text = \"Sex - \" + _monster.Get_Sex_As_String()
	$\"Margin/VBox/Box/Margin/Grid/Size\".text = \"Size - \" + _monster.Get_Size_As_String()
	$\"Margin/VBox/Box/Margin/Grid/Level\".text = \"Level - \" + str(_monster.Get_Level())
	#$\"Margin/VBox/Box/Margin/Grid/Passive\".text = \"Passive - \" + _monster.Get_Passive_As_String()
	#STATS
	$\"Margin/VBox/Grid/Health\".Set_Text(str(_monster.Get_Max_Health()))
	$\"Margin/VBox/Grid/Attack\".Set_Text(str(_monster.Get_Attack()))
	$\"Margin/VBox/Grid/Defense\".Set_Text(str(_monster.Get_Defense()))
	$\"Margin/VBox/Grid/Mana\".Set_Text(str(_monster.Get_Max_Mana()))
	$\"Margin/VBox/Grid/Intelligence\".Set_Text(str(_monster.Get_Intelligence()))
	$\"Margin/VBox/Grid/Resilience\".Set_Text(str(_monster.Get_Resilience()))
	$\"Margin/VBox/Grid/Speed\".Set_Text(str(_monster.Get_Speed()))
	$\"Margin/VBox/Grid/Agility\".Set_Text(str(_monster.Get_Agility()))
	$\"Margin/VBox/Grid/Charisma\".Set_Text(str(_monster.Get_Charisma()))
	#GRADE
	$\"Margin/VBox/Grid/Health\".Set_Grade(_monster.Get_Grade_Health())
	$\"Margin/VBox/Grid/Attack\".Set_Grade(_monster.Get_Grade_Attack())
	$\"Margin/VBox/Grid/Defense\".Set_Grade(_monster.Get_Grade_Defense())
	$\"Margin/VBox/Grid/Mana\".Set_Grade(_monster.Get_Grade_Mana())
	$\"Margin/VBox/Grid/Intelligence\".Set_Grade(_monster.Get_Grade_Intelligence())
	$\"Margin/VBox/Grid/Resilience\".Set_Grade(_monster.Get_Grade_Resilience())
	$\"Margin/VBox/Grid/Speed\".Set_Grade(_monster.Get_Grade_Speed())
	$\"Margin/VBox/Grid/Agility\".Set_Grade(_monster.Get_Grade_Agility())
	$\"Margin/VBox/Grid/Charisma\".Set_Grade(_monster.Get_Grade_Charisma())
	#TYPE
	for _i in 2:
		var _logo = [$\"Margin/VBox/Box/Margin/Grid/HBox/1\", $\"Margin/VBox/Box/Margin/Grid/HBox/2\"][_i]
		var _element = CE_Race.Get_Elements(_monster.Get_Race())[_i]
		if (_element != null):
			_logo.visible = true
			_logo.texture = load(CE_Element.Get_Texture(_element))
		else: _logo.visible = false
"

